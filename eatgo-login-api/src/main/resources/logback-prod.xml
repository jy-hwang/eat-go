<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- 콘솔 로그 출력 설정 -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    <!-- 일별 롤링 파일 로그 출력 설정 -->
    <appender name="DAILY_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>/logs/daily/login.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- 하루마다 롤링 -->
            <fileNamePattern>/logs/daily/login.%d{yyyy-MM-dd}.log</fileNamePattern>
            <!-- 보관할 최대 파일 수 -->
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- 월별 롤링 파일 로그 출력 설정 -->
    <appender name="MONTHLY_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>/logs/monthly/login.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- 월마다 롤링 -->
            <fileNamePattern>/logs/monthly/login.%d{yyyy-MM}.log</fileNamePattern>
            <!-- 보관할 최대 파일 수 -->
            <maxHistory>12</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- 로그 레벨 설정 -->
    <root level="debug">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="DAILY_FILE" />
        <appender-ref ref="MONTHLY_FILE" />
    </root>


</configuration>
